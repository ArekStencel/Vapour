<UserControl x:Class="Vapour.View.StoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vapour.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <ListBox Grid.Column="0" ItemsSource="{Binding Games}"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Tytuł placeholder"/>

                    <Grid Grid.Row="1" Margin="0 10" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Cena: " Grid.Column="0" />
                        <TextBlock Text="Placeholder" x:Name="Price"  Grid.Column="1" Margin="20 0 0 0" />
                    </Grid>

                    <Grid Grid.Row="2" Margin="0 10" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Opis: " Grid.Column="0" />
                        <TextBlock Text="Placeholder" x:Name="Descryption"  Grid.Column="1" Margin="20 0 0 0" />
                    </Grid>

                    <Grid Grid.Row="3" Margin="0 10" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Data premiery: " Grid.Column="0" />
                        <TextBlock Text="Placeholder" x:Name="Date"  Grid.Column="1" Margin="20 0 0 0" />
                    </Grid>

                    <Grid Grid.Row="4" Margin="0 10" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Średnia ocen: " Grid.Column="0" />
                        <TextBlock Text="Placeholder" x:Name="Score"  Grid.Column="1" Margin="20 0 0 0" />
                    </Grid>


                    <Button Grid.Column="1" Grid.Row="2" Height="60" Width="120"/>
                </Grid>
                
            </Grid>

            <ListBox Grid.Row="1"/>
        </Grid>
    </Grid>
</UserControl>
